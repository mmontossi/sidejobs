mysql: &mysql
  adapter: <%= 'jdbc' if RUBY_ENGINE == 'jruby' %>mysql<%= '2' if RUBY_ENGINE != 'jruby' %>

postgres: &postgres
  adapter: <%= 'jdbc' if RUBY_ENGINE == 'jruby' %>postgresql

sqlite: &sqlite
  adapter: <%= 'jdbc' if RUBY_ENGINE == 'jruby' %>sqlite3

test:
  <<: *<%= ENV['DB'] %>
  database: <%= ENV['DB'] == 'sqlite' ? 'db/travis.sqlite3' : 'travis' %>
